{
	"$schema": "https://json.schemastore.org/prettierrc",
	"useTabs": true,
	"semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
	"plugins": ["prettier-plugin-astro"],
  "overrides": [
		{
			"files": "*.astro",
      "options": { "parser": "astro" }
    }
  ],
	"vueIndentScriptAndStyle": true
}
